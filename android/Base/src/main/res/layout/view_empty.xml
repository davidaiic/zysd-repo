<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_100">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_data_empty"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#383511"
            android:textSize="16dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/ivEmpty"
            app:layout_constraintRight_toRightOf="@+id/ivEmpty"
            app:layout_constraintTop_toBottomOf="@+id/ivEmpty"
            tools:text="坎坎坷坷扩"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tvEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/collection_no_data"
            android:textColor="#C7C8CF"
            android:textSize="@dimen/dp_12"
            app:layout_constraintLeft_toLeftOf="@+id/tvEmpty"
            app:layout_constraintRight_toRightOf="@+id/tvEmpty"
            app:layout_constraintTop_toBottomOf="@+id/tvEmpty" />
    </LinearLayout>


</FrameLayout>