<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="24dp"
    app:bl_corners_radius="16dp"
    app:bl_solid_color="@color/white">

    <TextView
        android:id="@+id/tv_title"
        style="@style/XPopupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_24"
        android:textColor="@color/color_1C212A"
        android:textSize="@dimen/dp_16"
        android:textStyle="bold"
        tools:text="确认吗？" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_24"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_14"
        tools:text="哈哈哈哈哈啊啊" />


    <View
        android:id="@+id/h_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eaebee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:paddingVertical="@dimen/dp_12"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"

            android:text="@string/cancel"
            android:textColor="@color/color_90929E"
            android:textSize="@dimen/dp_16" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#eaebee" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="@string/sure_two"
            android:textColor="#0FC8AC"
            android:textSize="16dp" />
    </LinearLayout>
</com.noober.background.view.BLLinearLayout>