<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

        <com.noober.background.view.BLEditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginVertical="@dimen/dp_10"
            android:background="@color/white"
            android:gravity="top"
            app:bl_stroke_width="1dp"
            app:bl_stroke_color="@color/color_E0E0E0"
            app:bl_corners_radius="4dp"
            android:hint="写下您的评论～"
            android:padding="@dimen/dp_15"
            android:maxLength="1000"
            android:inputType="text"
            android:imeOptions="actionSend"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/dp_14" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imgRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:choiceMode="singleChoice"
            android:overScrollMode="never" />



        <com.noober.background.view.BLTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:text="重要提示:网友、医生言论仅代表其个人观点，不代表本站同意其说法，请谨慎发帖参阅，本站不承担由此引起的法律责任。"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/gyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_5"
            android:text="查看《评论规范公约》"
            android:textColor="@color/color_0FC8AC"
            android:textSize="@dimen/dp_12"
            app:bl_corners_radius="4dp" />
    </LinearLayout>