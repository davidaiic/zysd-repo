<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.manle.phone.android.yaodian.fragment.MineFragment.ProxyClick" />

        <variable
            name="user"
            type="com.manle.phone.android.yaodian.bean.UserBean" />
        <variable
            name="isLogin"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/color_0FC8AC"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            tools:layout_height="@dimen/dp_54">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="我的"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_18" />

            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_0FC8AC"
            android:onClick="@{()->click.login()}"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_18"
            android:paddingTop="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_13">

            <com.makeramen.roundedimageview.RoundedImageView
                headImageUrl="@{user.avatar}"
                android:layout_width="54dp"
                android:layout_height="@dimen/dp_54"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                tools:src="@drawable/ic_error_img" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_18"
                android:text="@{user.userNameText}"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                visible="@{isLogin}"
                android:src="@drawable/ic_right_white"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingVertical="@dimen/dp_10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_right"
                android:padding="@dimen/dp_15"
                android:text="我的订单"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_16" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15">


                <TextView
                    android:id="@+id/dfkTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_dfk"
                    android:drawablePadding="@dimen/dp_8"
                    android:onClick="@{()->click.waitPay()}"
                    android:paddingRight="@dimen/dp_15"
                    android:text="待付款"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/dfhTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableTop="@drawable/ic_dfh"
                    android:drawablePadding="@dimen/dp_8"
                    android:onClick="@{()->click.waitSend()}"
                    android:paddingRight="@dimen/dp_15"
                    android:text="待发货"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/dfkTv"
                    app:layout_constraintLeft_toRightOf="@+id/dfkTv"
                    app:layout_constraintRight_toLeftOf="@+id/yfhTv"
                    app:layout_constraintTop_toTopOf="@+id/dfkTv" />


                <TextView
                    android:id="@+id/yfhTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableTop="@drawable/ic_yfs"
                    android:drawablePadding="@dimen/dp_8"
                    android:onClick="@{()->click.sendReady()}"
                    android:paddingRight="@dimen/dp_15"
                    android:text="已发货"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/dfkTv"
                    app:layout_constraintLeft_toRightOf="@+id/dfhTv"
                    app:layout_constraintRight_toLeftOf="@+id/ysdTv"
                    app:layout_constraintTop_toTopOf="@+id/dfkTv" />


                <TextView
                    android:id="@+id/ysdTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawableTop="@drawable/ic_ysd"
                    android:drawablePadding="@dimen/dp_8"
                    android:onClick="@{()->click.sendToAddress()}"
                    android:paddingRight="@dimen/dp_15"
                    android:text="已送达"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_12"
                    app:layout_constraintBottom_toBottomOf="@+id/dfkTv"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dfkTv" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <com.app.base.view.ListTile
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:onClick="@{()->click.searchHistory()}"
                android:paddingHorizontal="@dimen/dp_15"
                app:lt_prefix_image="@drawable/ic_cxls"
                app:lt_prefix_image_height="@dimen/dp_34"
                app:lt_prefix_image_width="@dimen/dp_34"
                app:lt_prefix_text="查询历史"
                app:lt_prefix_text_color="@color/color_333333"
                app:lt_prefix_text_size="@dimen/dp_14"
                app:lt_suffix_image="@drawable/ic_right"
                app:lt_suffix_image_height="@dimen/dp_14"
                app:lt_suffix_image_width="@dimen/dp_14" />

            <com.app.base.view.ListTile
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:onClick="@{()->click.feedBack()}"
                android:paddingHorizontal="@dimen/dp_15"
                app:lt_prefix_image="@drawable/ic_yjfk"
                app:lt_prefix_image_height="@dimen/dp_34"
                app:lt_prefix_image_width="@dimen/dp_34"
                app:lt_prefix_text="意见反馈"
                app:lt_prefix_text_color="@color/color_333333"
                app:lt_prefix_text_size="@dimen/dp_14"
                app:lt_suffix_image="@drawable/ic_right"
                app:lt_suffix_image_height="@dimen/dp_14"
                app:lt_suffix_image_width="@dimen/dp_14" />

            <com.app.base.view.ListTile
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:onClick="@{()->click.callUs()}"
                android:paddingHorizontal="@dimen/dp_15"
                app:lt_prefix_image="@drawable/ic_lxwm"
                app:lt_prefix_image_height="@dimen/dp_34"
                app:lt_prefix_image_width="@dimen/dp_34"
                app:lt_prefix_text="联系我们"
                app:lt_prefix_text_color="@color/color_333333"
                app:lt_prefix_text_size="@dimen/dp_14"
                app:lt_suffix_image="@drawable/ic_right"
                app:lt_suffix_image_height="@dimen/dp_14"
                app:lt_suffix_image_width="@dimen/dp_14" />

            <com.app.base.view.ListTile
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:onClick="@{()->click.shareCode()}"
                android:paddingHorizontal="@dimen/dp_15"
                app:lt_prefix_image="@drawable/ic_fxm"
                app:lt_prefix_image_height="@dimen/dp_34"
                app:lt_prefix_image_width="@dimen/dp_34"
                app:lt_prefix_text="分享码"
                app:lt_prefix_text_color="@color/color_333333"
                app:lt_prefix_text_size="@dimen/dp_14"
                app:lt_suffix_image="@drawable/ic_right"
                app:lt_suffix_image_height="@dimen/dp_14"
                app:lt_suffix_image_width="@dimen/dp_14" />

            <com.app.base.view.ListTile
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:onClick="@{()->click.setting()}"
                android:paddingHorizontal="@dimen/dp_15"
                app:lt_prefix_image="@drawable/ic_szzx"
                app:lt_prefix_image_height="@dimen/dp_34"
                app:lt_prefix_image_width="@dimen/dp_34"
                app:lt_prefix_text="设置中心"
                app:lt_prefix_text_color="@color/color_333333"
                app:lt_prefix_text_size="@dimen/dp_14"
                app:lt_suffix_image="@drawable/ic_right"
                app:lt_suffix_image_height="@dimen/dp_14"
                app:lt_suffix_image_width="@dimen/dp_14" />


        </LinearLayout>


    </LinearLayout>
</layout>