<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.manle.phone.android.yaodian.bean.CommentDetailBean.Info" />

        <variable
            name="click"
            type="com.manle.phone.android.yaodian.activity.CommentDetailActivity.ProxyClick" />

        <variable
            name="haveComment"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/topBar"
            layout="@layout/include_toolbar" />


        <com.drake.brv.PageRefreshLayout
            android:id="@+id/prl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:stateEnabled="false"
            app:srlEnableLoadMoreWhenContentNotFull="true"
            app:srlEnablePreviewInEditMode="true">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.manle.phone.android.yaodian.view.MarqueeTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_F2F3F5"
                        android:drawableLeft="@drawable/ic_tz"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/dp_7"
                        android:paddingLeft="@dimen/dp_15"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/dp_12"
                        android:text="凡涉及治疗方案/用药等内容均存在个体差异，请勿盲目效仿."
                        android:singleLine="true" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/headIv"
                            imageUrl="@{data.avatar}"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_error_img"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:riv_oval="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:textColor="@color/color_262626"
                            android:textSize="@dimen/dp_14"
                            app:layout_constraintLeft_toRightOf="@+id/headIv"
                            app:layout_constraintTop_toTopOf="@+id/headIv"
                            tools:text="里*斯" />

                        <TextView
                            android:id="@+id/nickNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:text="@{data.username}"
                            android:textColor="@color/color_262626"
                            android:textSize="@dimen/dp_14"
                            app:layout_constraintLeft_toRightOf="@+id/headIv"
                            app:layout_constraintTop_toTopOf="@+id/headIv"
                            tools:text="里*斯" />


                        <TextView
                            android:id="@+id/timeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{data.created}"
                            android:textColor="@color/color_8C8C8C"
                            android:textSize="@dimen/dp_11"
                            app:layout_constraintLeft_toLeftOf="@+id/nickNameTv"
                            app:layout_constraintTop_toBottomOf="@+id/nickNameTv"
                            tools:text="12-12 10:00" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/contentTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_20"
                        android:text="@{data.content}"
                        android:textColor="@color/color_262626"
                        android:textSize="@dimen/dp_14"
                        app:layout_constraintLeft_toRightOf="@+id/headIv"
                        app:layout_constraintTop_toTopOf="@+id/headIv"
                        tools:text="里*斯" />

<!--                    <androidx.recyclerview.widget.RecyclerView-->
<!--                        android:id="@+id/imgRv"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:overScrollMode="never"-->
<!--                        android:scrollbars="none" />-->
                    <com.app.base.view.nine.NineGridView
                        android:id="@+id/ngv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/contentTv"
                        app:ngv_four_strategy="fill"
                        app:ngv_itemGap="@dimen/dp_7"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        app:ngv_maxCount="9"
                        app:ngv_single_strategy="custom"
                        app:ngv_spanCount="3"
                        app:ngv_three_strategy="fill"
                        app:ngv_two_strategy="fill" />

                    <View
                        android:id="@+id/vline"
                        visible="@{haveComment}"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/color_F2F3F5" />

                    <TextView
                        visible="@{haveComment}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_15"
                        android:paddingVertical="@dimen/dp_10"
                        android:text="@{data.commentDetailNumText}"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold" />

                    <com.drake.statelayout.StateLayout
                        android:id="@+id/state"
                        visible="@{haveComment}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/commentRv"
                            visible="@{haveComment}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            android:scrollbars="none" />
                    </com.drake.statelayout.StateLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


        </com.drake.brv.PageRefreshLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="@color/color_F2F3F5" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.noober.background.view.BLTextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="center_vertical"
                android:onClick="@{()->click.comment()}"
                android:paddingHorizontal="@dimen/dp_16"
                android:text="写下您的评论～"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dp_14"
                app:bl_corners_radius="@dimen/dp_20"
                app:bl_solid_color="@color/color_F2F3F5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/commentTv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/commentTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_comment"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="@{data.commentNumText}"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/commentShareTv"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="111" />

            <TextView
                android:id="@+id/commentShareTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_comment_share"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:onClick="@{()->click.share()}"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>