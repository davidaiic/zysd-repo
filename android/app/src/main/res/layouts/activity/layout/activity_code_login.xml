<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<variable
    name="click"
    type="com.manle.phone.android.yaodian.pop.LoginPop.ProxyClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/closeIv"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:text="验证码登录"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_24"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phoneEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginHorizontal="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_90"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="请输入您的手机号"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_D5D5D5"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:background="@color/color_eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/codeEt" 
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:maxLength="6"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_D5D5D5"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/getCodeTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="获取验证码"
                android:onClick="@{()->click.getCode()}"
                android:textColor="@color/color_0FC8AC"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:background="@color/color_eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/agreementIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:onClick="@{()->click.selectAgreement()}"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_login_uncheck" />

            <TextView
                android:id="@+id/tvUserAgreement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_14"
                tools:text="我已阅读并同意" />
        </LinearLayout>

        <com.noober.background.view.BLTextView
            android:id="@+id/loginTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginHorizontal="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_40"
            app:bl_corners_radius="@dimen/dp_30"
            android:onClick="@{()->click.login()}"
            android:paddingVertical="@dimen/dp_11"
            android:gravity="center"
            android:textSize="@dimen/dp_16"
            android:text="登录"
            app:bl_solid_color="@color/color_CACACA" />
    </LinearLayout>
</layout>