<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.manle.phone.android.yaodian.activity.ScanActivity.ProxyClick" />
        <variable
            name="isOnlyShowScan"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/takePhotoFl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:id="@+id/scanLl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_164"
            tools:visibility="visible">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <com.base.myzxing.ViewfinderView
                    android:id="@+id/viewfinderView"
                    android:layout_width="@dimen/dp_260"
                    android:layout_height="@dimen/dp_260"
                    app:cornerColor="@color/color_0FC8AC"
                    app:frameColor="@color/color_0FC8AC"
                    app:frameHeight="@dimen/dp_260"
                    app:frameWidth="@dimen/dp_260"
                    app:labelText="@string/tips_scan_code"
                    app:labelTextLocation="bottom"
                    app:labelTextSize="14dp"
                    app:laserColor="@color/color_0FC8AC"
                    app:laserDrawable="@drawable/ic_scan_line"
                    app:laserStyle="image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ivFlashlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:drawableTop="@drawable/light_selector"
                    android:drawablePadding="@dimen/dp_4"
                    android:onClick="@{()->click.toggleTorchState()}"
                    android:text="轻触点亮"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_25"
                android:drawableTop="@drawable/ic_slt"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                visible="@{isOnlyShowScan}"
                android:text="示例图"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center"
                visible="@{isOnlyShowScan}"
                android:text="扫描13位数字条形码，无条形码时，请拍照查真伪"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/takePhotoIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:onClick="@{()->click.takePhoto()}"
            android:src="@drawable/ic_strat_take_photo"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/toAlbumIv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/toAlbumIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_35"
            android:onClick="@{()->click.selectImg()}"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_album"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/toScanTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:onClick="@{()->click.toScan()}"
            android:padding="@dimen/dp_10"
            android:text="扫一扫"
            visible="@{isOnlyShowScan}"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"
            app:layout_constraintBottom_toBottomOf="@+id/toAlbumIv"
            app:layout_constraintLeft_toRightOf="@+id/toAlbumIv"
            app:layout_constraintTop_toTopOf="@+id/toAlbumIv" />

        <TextView
            android:id="@+id/toTakePhotoTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:onClick="@{()->click.switchPhoto()}"
            android:padding="@dimen/dp_10"
            android:text="拍照"
            android:textColor="@color/color_70_ffffff"
            android:textSize="@dimen/dp_14"
            visible="@{isOnlyShowScan}"
            app:layout_constraintBottom_toBottomOf="@+id/toScanTv"
            app:layout_constraintLeft_toRightOf="@+id/toScanTv"
            app:layout_constraintTop_toTopOf="@+id/toScanTv" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MyToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            tools:layout_height="@dimen/dp_54">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:id="@+id/backTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_white_back"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:onClick="@{()->click.closeAct()}"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_10"
                    android:textColor="@color/color_1C212A"
                    android:textSize="@dimen/dp_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fragmentTitleTv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:layout_marginRight="@dimen/dp_60"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="扫一扫"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_18"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/photoImgFl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/white">

            <ImageView
                android:id="@+id/photoImgIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <com.noober.background.view.BLTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/dp_30"
                android:onClick="@{()->click.cancel()}"
                android:paddingHorizontal="@dimen/dp_40"
                android:paddingVertical="@dimen/dp_5"
                android:text="取消"
                android:textColor="@color/color_0FC8AC"
                android:textSize="@dimen/dp_16"
                app:bl_corners_radius="@dimen/dp_40"
                app:bl_stroke_color="@color/color_0FC8AC"
                app:bl_stroke_width="1dp" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>