<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="click"
            type="com.manle.phone.android.yaodian.activity.MessageCollectActivity.ProxyClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/topBar"
            layout="@layout/include_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_20">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="收集时间段"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:onClick="@{()->click.time()}"
                android:drawableRight="@drawable/ic_down_line"
                android:drawablePadding="@dimen/dp_20"
                android:gravity="center"
                android:text="一天"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>

        <com.app.base.view.ListTile
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="@dimen/dp_20"
            app:lt_bottom_show="true"
            app:lt_prefix_text="用户基本信息"
            android:onClick="@{()->click.userMessage()}"
            app:lt_prefix_text_color="@color/color_333333"
            app:lt_prefix_text_size="@dimen/dp_14"
            app:lt_suffix_image="@drawable/ic_right"
            app:lt_suffix_image_height="@dimen/dp_14"
            app:lt_suffix_image_width="@dimen/dp_14"
            app:lt_top_show="true" />

        <com.app.base.view.ListTile
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="@dimen/dp_20"
            app:lt_prefix_text="用户使用过程信息"
            android:onClick="@{()->click.userUseMessage()}"
            app:lt_prefix_text_color="@color/color_333333"
            app:lt_prefix_text_size="@dimen/dp_14"
            app:lt_suffix_image="@drawable/ic_right"
            app:lt_suffix_image_height="@dimen/dp_14"
            app:lt_suffix_image_width="@dimen/dp_14"
            app:lt_top_show="true" />

        <com.app.base.view.ListTile
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="@dimen/dp_20"
            app:lt_bottom_show="true"
            app:lt_prefix_text="设备属性信息"
            android:onClick="@{()->click.deviceMessage()}"
            app:lt_prefix_text_color="@color/color_333333"
            app:lt_prefix_text_size="@dimen/dp_14"
            app:lt_suffix_image="@drawable/ic_right"
            app:lt_suffix_image_height="@dimen/dp_14"
            app:lt_suffix_image_width="@dimen/dp_14"
            app:lt_top_show="true" />


    </LinearLayout>
</layout>