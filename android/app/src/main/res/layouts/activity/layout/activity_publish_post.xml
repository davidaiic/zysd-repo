<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="click"
            type="com.manle.phone.android.yaodian.activity.PublishPostActivity.ProxyClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/topBar"
            layout="@layout/include_toolbar" />



            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_215"
                        android:background="@color/white"
                        android:gravity="top"
                        android:hint="写些什么和大家分享…"
                        android:padding="@dimen/dp_15"
                        android:maxLength="1000"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_999999"
                        android:textSize="@dimen/dp_14" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/imgRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:choiceMode="singleChoice"
                        android:overScrollMode="never" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:text="@string/picture_num"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/dp_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/color_F8F8F8" />

                    <com.noober.background.view.BLTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:paddingHorizontal="@dimen/dp_12"
                        android:paddingVertical="@dimen/dp_10"
                        android:text="重要提示:网友、医生言论仅代表其个人观点，不代表本站同意其说法，请谨慎发帖参阅，本站不承担由此引起的法律责任。"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp_14"
                        app:bl_corners_radius="4dp"
                        app:bl_solid_color="@color/color_10_0FC8AC"
                        app:bl_stroke_color="@color/color_0FC8AC"
                        app:bl_stroke_width="@dimen/dp_0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:onClick="@{()->click.toCriterion()}"
                        android:paddingVertical="@dimen/dp_10"

                        android:text="查看《评论规范公约》"
                        android:textColor="@color/color_0FC8AC"
                        android:textSize="@dimen/dp_14"
                        app:bl_corners_radius="4dp" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.noober.background.view.BLTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="@dimen/dp_48"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="发布"
                    android:onClick="@{()->click.uploadImg()}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16"
                    app:bl_corners_radius="40dp"
                    app:bl_solid_color="@color/color_0FC8AC" />
            </FrameLayout>



    </LinearLayout>
</layout>