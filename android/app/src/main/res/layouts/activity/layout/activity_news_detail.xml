<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.manle.phone.android.yaodian.bean.NewsDetailBean.Info" />

        <variable
            name="click"
            type="com.manle.phone.android.yaodian.activity.NewsDetailActivity.ProxyClick" />

        <variable
            name="haveComment"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/topBar"
            layout="@layout/include_toolbar" />


        <com.drake.brv.PageRefreshLayout
            android:id="@+id/prl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srlEnableLoadMoreWhenContentNotFull="true"
            app:srlEnablePreviewInEditMode="true"
            app:stateEnabled="false">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.manle.phone.android.yaodian.view.MarqueeTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_F2F3F5"
                        android:drawableLeft="@drawable/ic_tz"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/dp_7"
                        android:paddingLeft="@dimen/dp_15"
                        android:singleLine="true"
                        android:text="该内容由识药查真伪团队收集整理，欢迎转载！因个体差异，该内容不能作为任何用药依据，请严格按药品说明书或医嘱下购买和使用。如有不当之处欢迎指正！"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/dp_12" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/headIv"
                            imageUrl="@{data.avatar}"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_error_img"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:riv_oval="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:textColor="@color/color_262626"
                            android:textSize="@dimen/dp_14"
                            app:layout_constraintLeft_toRightOf="@+id/headIv"
                            app:layout_constraintTop_toTopOf="@+id/headIv"
                            tools:text="里*斯" />

                        <TextView
                            android:id="@+id/nickNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:text="@{data.username}"
                            android:textColor="@color/color_262626"
                            android:textSize="@dimen/dp_14"
                            app:layout_constraintLeft_toRightOf="@+id/headIv"
                            app:layout_constraintTop_toTopOf="@+id/headIv"
                            tools:text="里*斯" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/tagRv"
                            detailLabels="@{data.label}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/dp_20"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintLeft_toLeftOf="@+id/nickNameTv"
                            app:layout_constraintTop_toBottomOf="@+id/nickNameTv"
                            tools:itemCount="4" />

                        <View
                            android:id="@+id/v"
                            visible="@{data.label.size()>0}"
                            android:layout_width="@dimen/dp_14"
                            android:layout_height="@dimen/dp_0"
                            app:layout_constraintBottom_toBottomOf="@+id/tagRv"
                            app:layout_constraintLeft_toRightOf="@+id/tagRv"
                            app:layout_constraintTop_toTopOf="@+id/tagRv" />


                        <TextView
                            android:id="@+id/timeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{data.created}"

                            android:textColor="@color/color_8C8C8C"
                            android:textSize="@dimen/dp_11"
                            app:layout_constraintBottom_toBottomOf="@+id/tagRv"
                            app:layout_constraintLeft_toRightOf="@+id/v"
                            app:layout_constraintTop_toTopOf="@+id/tagRv"
                            tools:text="12-12 10:00" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <wendu.dsbridge.DWebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:scrollbars="none"
                        app:layout_constraintLeft_toRightOf="@+id/headIv"
                        app:layout_constraintTop_toTopOf="@+id/headIv" />
                    <!--                    <TextView-->
                    <!--                        android:id="@+id/contentTv"-->
                    <!--                        htmlText="@{data.content}"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginLeft="@dimen/dp_15"-->
                    <!--                        android:paddingTop="@dimen/dp_8"-->
                    <!--                        android:paddingBottom="@dimen/dp_20"-->
                    <!--                        android:textColor="@color/color_262626"-->
                    <!--                        android:textSize="@dimen/dp_14"-->
                    <!--                        app:layout_constraintLeft_toRightOf="@+id/headIv"-->
                    <!--                        app:layout_constraintTop_toTopOf="@+id/headIv"-->
                    <!--                        tools:text="里*斯" />-->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/imgRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                    <View
                        visible="@{haveComment}"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/color_F2F3F5" />

                    <TextView
                        visible="@{haveComment}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_15"
                        android:paddingVertical="@dimen/dp_10"
                        android:text="@{data.commentDetailNumText}"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/commentRv"
                        visible="@{haveComment}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </com.drake.brv.PageRefreshLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="@color/color_F2F3F5" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.noober.background.view.BLTextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="center_vertical"
                android:onClick="@{()->click.comment()}"
                android:paddingHorizontal="@dimen/dp_16"
                android:text="写下您的评论～"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dp_14"
                app:bl_corners_radius="@dimen/dp_20"
                app:bl_solid_color="@color/color_F2F3F5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/commentTv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/commentTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_comment"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"

                android:paddingLeft="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:text="@{data.commentNumText}"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/commentShareTv"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="111" />

            <TextView
                android:id="@+id/commentShareTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_comment_share"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:onClick="@{()->click.share()}"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_5"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>