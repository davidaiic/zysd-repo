<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.manle.phone.android.yaodian.bean.CommentBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/headIv"
            headImageUrl="@{model.avatar}"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_oval="true"
            tools:src="@drawable/ic_error_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:includeFontPadding="false"
            android:text="@{model.username}"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/dp_14"
            app:layout_constraintLeft_toRightOf="@+id/headIv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="徐*凤" />

        <TextView
            android:id="@+id/likeTv"
            isLike="@{model.isLike()==1}"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_vertical"
            android:text="@{model.likeNumText}"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dp_14"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:drawableLeft="@drawable/ic_comment_likeed"
            tools:text="11" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:includeFontPadding="false"
            android:text="@{model.created}"
            android:textColor="@color/color_8C8C8C"
            android:textSize="@dimen/dp_11"
            app:layout_constraintBottom_toBottomOf="@+id/headIv"
            app:layout_constraintLeft_toRightOf="@+id/headIv"
            tools:text="12-12 19:28" />

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:includeFontPadding="false"
            android:text="@{model.content}"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/dp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headIv"
            tools:text="刚刚买了元素的卡马，到货很快，也查了一下是正品，值得推荐的" />

        <com.app.base.view.nine.NineGridView
            android:id="@+id/ngv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentTv"
            app:ngv_four_strategy="bili"
            app:ngv_itemGap="@dimen/dp_7"
            app:ngv_maxCount="9"
            app:ngv_single_strategy="custom"
            app:ngv_spanCount="3"
            app:ngv_three_strategy="fill"
            app:ngv_two_strategy="fill" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>