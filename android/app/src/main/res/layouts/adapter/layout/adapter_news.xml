<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.manle.phone.android.yaodian.bean.NewsBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_20">


        <TextView
            android:id="@+id/contentTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:includeFontPadding="false"
            android:text="@{model.title}"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/dp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newsIv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="刚刚买了元素的卡马，到货很快，也查了一下是正品，值得推荐的" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/newsIv"
            imageUrl="@{model.cover}"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_error_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp_8" />

        <LinearLayout
            android:id="@+id/centerLl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newsIv"
            app:layout_constraintTop_toBottomOf="@+id/contentTv">

            <com.noober.background.view.BLTextView
                android:id="@+id/tagTv"
                visible="@{model.label.size()>0}"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:gravity="center"

                android:paddingHorizontal="@dimen/dp_4"
                android:text="@{model.label.size()>0?model.label.get(0) : ``}"
                android:textColor="@color/color_0FC8AC"
                android:textSize="@dimen/dp_11"
                app:bl_corners_radius="2dp"
                app:bl_solid_color="@color/color_10_0FC8AC"
                tools:text="医保" />

            <com.noober.background.view.BLTextView
                android:id="@+id/tag2Tv"
                visible="@{model.label.size()>1}"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"

                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center"
                tools:visibility="gone"
                android:paddingHorizontal="@dimen/dp_4"
                android:text="@{model.label.size()>1?model.label.get(1) : ``}"
                android:textColor="@color/color_0FC8AC"
                android:textSize="@dimen/dp_11"
                app:bl_corners_radius="2dp"
                app:bl_solid_color="@color/color_10_0FC8AC"
                tools:text="医保" />
            <View
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent"
                visible="@{model.label.size()>0}"/>

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@{model.created}"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dp_12"
                tools:text="5分钟前" />

            <TextView
                android:id="@+id/ydTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:text="@{model.readNumText}"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dp_12"
                tools:text="200阅读" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomLl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newsIv"
            app:layout_constraintTop_toBottomOf="@+id/centerLl">

            <TextView
                android:id="@+id/likeTv"
                isLike="@{model.isLike()==1}"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/dp_2"
                android:gravity="center_vertical"
                android:text="@{model.likeNumText}"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_14"
                tools:drawableLeft="@drawable/ic_comment_likeed"
                tools:text="111" />

            <TextView
                android:id="@+id/commentTv"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_comment"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:text="@{model.commentNumText}"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_14"
                tools:text="111" />

            <TextView
                android:id="@+id/shareWxTv"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_comment_share"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/dp_10"
                android:paddingTop="@dimen/dp_9"
                android:paddingBottom="@dimen/dp_11"
                android:text="@{model.commentNum+``}"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp_14"
                tools:text="3" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>