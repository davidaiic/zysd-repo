<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.luck.picture.lib.entity.LocalMedia" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/picIv"
            media="@{model}"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_78"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp_4" />

        <ImageView
            android:id="@+id/deleteImgIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="@drawable/ic_delete_pic"
            app:layout_constraintRight_toRightOf="@+id/picIv"
            app:layout_constraintTop_toTopOf="@+id/picIv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
