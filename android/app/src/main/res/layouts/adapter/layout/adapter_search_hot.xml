<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.manle.phone.android.yaodian.bean.HotSearchBean.Word" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.noober.background.view.BLTextView
            android:id="@+id/sortTv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14"
            app:bl_corners_radius="@dimen/dp_20"
            app:bl_solid_color="#FC511E" />

        <com.noober.background.view.BLTextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:ellipsize="end"

            android:includeFontPadding="false"
          android:paddingHorizontal="@dimen/dp_26"
            android:paddingVertical="@dimen/dp_5"
            android:singleLine="true"
            android:text="@{model.word}"
            android:textColor="@color/color_666666"
            android:textSize="13dp"
            app:bl_corners_radius="@dimen/dp_20"
            app:bl_solid_color="@color/color_F6F7F8"
            tools:text="卡马替尼" />
    </LinearLayout>

</layout>