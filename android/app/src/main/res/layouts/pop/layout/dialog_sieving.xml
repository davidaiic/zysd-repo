<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="click"
            type="com.manle.phone.android.yaodian.pop.SievingPopupView.ProxyClick" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_17">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排序"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sortRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:overScrollMode="never"
            android:scrollbars="none" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:text="筛选条件"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/labelRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_10">

            <com.noober.background.view.BLTextView
                android:id="@+id/resetTv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{()->click.reset()}"
                android:text="重置"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dp_16"
                app:bl_corners_radius="@dimen/dp_30"
                app:bl_stroke_color="@color/color_999999"
                app:bl_stroke_width="1dp" />

            <com.noober.background.view.BLTextView
                android:id="@+id/submotTv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{()->click.submit()}"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16"
                app:bl_corners_radius="@dimen/dp_30"
                app:bl_solid_color="@color/color_0FC8AC" />
        </LinearLayout>
    </LinearLayout>

</layout>