<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="发现新版本"
                    android:textColor="@color/color_1C212A"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_666666"
                    android:textSize="14dp"
                    tools:text="哈哈哈哈哈哈哈哈" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">


                    <com.noober.background.view.BLTextView
                        android:id="@id/versionchecklib_version_dialog_cancel"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:text="取消"
                        android:gravity="center"
                        android:textColor="@color/color_1C212A"
                        android:textSize="@dimen/dp_14"
                        app:bl_corners_radius="@dimen/dp_35"
                        app:bl_solid_color="@color/color_E0E0E0"
                        tools:visibility="gone" />

                    <View
                        android:id="@+id/centerView"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_35"
                        android:layout_gravity="center_vertical"
                        tools:visibility="gone" />

                    <com.noober.background.view.BLTextView
                        android:id="@id/versionchecklib_version_dialog_commit"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:text="更新"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14"
                        app:bl_corners_radius="@dimen/dp_35"
                        app:bl_solid_color="@color/colorPrimary" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
